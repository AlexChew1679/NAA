<% if @task.errors.any? %>
<h4> Siao Liao, Jia Lat, SumTing Long</h4>
 <ul>
  <% @task.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
  <%end%>
</ul>
<%end%>

<%= simple_form_for @task do |f| %>
    <%= f.input :content %>
    <%= f.input :state %> <p> Please enter state: to_do, doing or done </p>
    <%= f.input :image %>
    <%= f.input :resource %>
    <%= f.button :submit %>

<%end%>

<p>
  <%= link_to 'All Todos', tasks_path %>
</p>
